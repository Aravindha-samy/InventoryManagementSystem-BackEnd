@model InventoryManagementSystem.Models.Product
<link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div id="response">
    @if (ViewData["Response"] != null)
    {
        <p>@ViewData["Response"]</p>
    }
</div>
    
   
<form asp-action="Edit" method="get" class="d-flex justify-content-center align-items-center">
