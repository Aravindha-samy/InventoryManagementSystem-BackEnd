<link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />
@model InventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <div id="response">
        @if (ViewData["Response"] != null)
        {
            <p>@ViewData["Response"]</p>
        }
    </div>
    <form asp-action="Details" method="get" class="d-flex justify-content-center align-items-center">
        <div class="form-group" style="display:flex">
            <input type="number" id="ProductId" name="id" class="form-control" placeholder="Enter Product ID" required>
            <button type="submit" class="btn btn-primary">Details</button>
        </div>
    </form>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescribtion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDescribtion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductBarCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductBarCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplierId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
