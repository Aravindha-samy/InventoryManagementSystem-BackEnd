@model InventoryManagementSystem.Models.Product
<link rel="stylesheet" href="~/css/delete.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div>
    <h4>Product</h4>
    <hr />
    <div id="response">
        @if (ViewData["Response"] != null)
        {
            <p>@ViewData["Response"]</p>
        }
    </div>
    <form asp-action="Delete" method="get" class="d-flex justify-content-center align-items-center">
        <div class="form-group" style="display:flex">
            <input type="number" id="ProductId" name="id" class="form-control" placeholder="Enter Product ID" required>
            <button type="submit" class="btn btn-primary">Get</button>
        </div>
    </form>
    


   
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescribtion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDescribtion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductBarCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductBarCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplierId)
        </dd>
    </dl>
    <h3>Are you sure you want to delete this?</h3><br />
    <div style="display:flex">
    <h3 style="color:teal">Re-enter to confirm   </h3>
    <form asp-action="Delete" method="post" style="margin-left:10px" class="d-flex justify-content-center align-items-center">
        <div class="form-group" style="display:flex">
            <input type="number" id="ConfirmProductId" name="id" class="form-control" placeholder="Enter Product ID" required>
            <button type="submit" style="margin-left:10px"class="btn btn-danger">Delete</button>
            <button asp-action="Index" style="margin-left:10px" class="btn btn-info">Cancel</button>
            </div>
    </form>
    </div>
</div>
